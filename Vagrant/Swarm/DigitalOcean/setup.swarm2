#!/bin/sh
vagrant plugin install vagrant-digitalocean;
token=$(cat token);
for x in Wx2;do
 mkdir -p Swarm/$x;
 cd Swarm/$x;
 curl https://raw.githubusercontent.com/secobau/linux/master/Vagrant/Swarm/DigitalOcean/$x/Vagrantfile -O;
 sed s/xxx/$token/ Vagrantfile;
 vagrant up --parallel;
 cd -;
 done
cd Swarm/M1
vagrant ssh M1 -c "curl https://raw.githubusercontent.com/secobau/linux/master/Vagrant/Swarm/DigitalOcean/stack2.yml -O";
vagrant ssh M1 -c "sudo docker stack deploy -c stack2.yml my";
